    <style name="Remind_Page_TextView_Style_Left">
        <item name="android:layout_marginTop">@dimen/base_10</item>
        <item name="android:layout_marginBottom">@dimen/base_10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/base_font_size</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <style name="Remind_Page_TextView_Style_Right">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/base_font_size</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="Remind_Page_Red_TextView_Style">
        <item name="android:layout_marginStart">@dimen/base_5</item>
        <item name="android:layout_marginEnd">@dimen/base_5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/base_font_size</item>
        <item name="android:textColor">@color/base_red</item>
    </style>

