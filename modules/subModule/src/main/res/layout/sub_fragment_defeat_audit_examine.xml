<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_app_background_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/consultant_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_10"
            android:text="新顾问"
            android:textColor="@color/base_font_color_black"
            android:textSize="@dimen/base_font_size" />

        <TextView
            android:id="@+id/btn_choose_consultant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_10"
            android:layout_weight="1"
            android:hint="请选择"
            android:textColor="@color/base_font_color_black" />

        <ImageView
            android:layout_width="@dimen/base_20"
            android:layout_height="@dimen/base_20"
            android:layout_marginEnd="@dimen/base_10"
            android:src="@drawable/bus_ic_forward" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/Base_Simple_Line_Style"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_opinion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/base_10"
            android:text="分配意见"
            android:textColor="@color/base_font_color_black"
            android:textSize="@dimen/base_font_size" />

        <EditText
            android:id="@+id/ev_opinion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_15"
            android:layout_marginBottom="@dimen/base_15"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start"
            android:hint="请输入分配意见"
            android:minHeight="@dimen/base_150"
            android:textSize="@dimen/base_font_size" />


    </LinearLayout>


</LinearLayout>