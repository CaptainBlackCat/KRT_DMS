<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/base_10"
        android:paddingTop="@dimen/base_10"
        android:paddingEnd="@dimen/base_5"
        android:paddingBottom="@dimen/base_10"
        android:textColor="@color/base_font_color_black"
        android:textSize="@dimen/base_font_size"
        tool:text="安徽" />

    <TextView
        android:id="@+id/tv_leads_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/clue_customer_index_leads_level_bg"
        android:gravity="center"
        android:textColor="@color/base_white"
        android:textSize="@dimen/base_font_size_small_small_1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name"
        tool:text="A" />

    <ImageView
        android:id="@+id/iv_focus"
        android:layout_width="@dimen/base_15"
        android:layout_height="@dimen/base_15"
        android:layout_marginStart="@dimen/base_3"
        android:src="@drawable/bus_ic_yellow_star"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@+id/tv_leads_level"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/intentional_models"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_10"
        android:text="意向车系:"
        android:textSize="@dimen/base_font_size_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/tv_intentional_models"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_10"
        android:textSize="@dimen/base_font_size_small"
        app:layout_constraintLeft_toRightOf="@+id/intentional_models"
        app:layout_constraintTop_toBottomOf="@+id/name" />


    <View
        style="@style/Base_Simple_Line_Style"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
