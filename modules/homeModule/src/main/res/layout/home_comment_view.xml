<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_1"
        android:background="@color/base_app_background_gray" />

    <ImageView
        android:id="@+id/progress_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_55"
        android:padding="@dimen/base_12"
        android:src="@drawable/bus_star_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progress_2" />

    <View
        android:layout_width="@dimen/base_1"
        android:layout_height="0dp"
        android:background="@color/base_app_background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/progress_1"
        app:layout_constraintRight_toLeftOf="@id/progress_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_55"
        android:padding="@dimen/base_12"
        android:src="@drawable/bus_star_bg"
        app:layout_constraintLeft_toRightOf="@+id/progress_1"
        app:layout_constraintRight_toLeftOf="@+id/progress_3" />

    <View
        android:layout_width="@dimen/base_1"
        android:layout_height="0dp"
        android:background="@color/base_app_background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/progress_2"
        app:layout_constraintRight_toLeftOf="@id/progress_3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_55"
        android:padding="@dimen/base_12"
        android:src="@drawable/bus_star_bg"
        app:layout_constraintLeft_toRightOf="@+id/progress_2"
        app:layout_constraintRight_toLeftOf="@+id/progress_4" />

    <View
        android:layout_width="@dimen/base_1"
        android:layout_height="0dp"
        android:background="@color/base_app_background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/progress_3"
        app:layout_constraintRight_toLeftOf="@id/progress_4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_55"
        android:padding="@dimen/base_12"
        android:src="@drawable/bus_star_bg"
        app:layout_constraintLeft_toRightOf="@+id/progress_3"
        app:layout_constraintRight_toLeftOf="@+id/progress_5" />

    <View
        android:layout_width="@dimen/base_1"
        android:layout_height="0dp"
        android:background="@color/base_app_background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/progress_4"
        app:layout_constraintRight_toLeftOf="@id/progress_5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_5"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_55"
        android:padding="@dimen/base_12"
        android:src="@drawable/bus_star_bg"
        app:layout_constraintLeft_toRightOf="@+id/progress_4"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_1"
        android:background="@color/base_app_background_gray"
        android:padding="@dimen/base_12"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>